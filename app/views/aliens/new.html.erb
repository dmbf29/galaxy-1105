<div class="container mt-3">
  <h1>Add Alien to <%= @planet.name %></h1>
  <%= simple_form_for [@planet, @alien] do |f| %>
    <%= f.input :name %>
    <%# This is the old way w/a string url %>
    <%#= f.input :image_url %>
    <%= f.input :photo, as: :file %>
    <%= f.submit 'Submit', class: 'btn btn-danger mt-2' %>
  <% end %>
</div>
